{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.uniscript",
  "name": "UniScript",
  "fileTypes": ["us"],
  "patterns": [
    { "include": "#keywords" },
    { "include": "#comments" },
    { "include": "#variable" },
    { "include": "#numeric" },
    { "include": "#string" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#block" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash",
          "match": "--.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.uniscript",
          "match": "\\b(if|else|while|for|put)\\b"
        },
        {
          "name": "keyword.operator.range.uniscript",
          "match": "\\b(to|step)\\b"
        }
      ]
    },
    "variable": {
      "patterns": [
        {
          "name": "variable.other.uniscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "numeric": {
      "patterns": [
        {
          "name": "constant.numeric.uniscript",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.uniscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.uniscript",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.uniscript",
          "match": "\\+|-|\\*|/|%|\\^"
        },
        {
          "name": "keyword.operator.assignment.uniscript",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.uniscript",
          "match": "==|!=|<=?|>=?"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.uniscript",
          "match": ","
        },
        {
          "name": "punctuation.terminator.uniscript",
          "match": ";"
        }
      ]
    },
    "block": {
      "patterns": [
        {
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            { "include": "#keywords" },
            { "include": "#comments" },
            { "include": "#variable" },
            { "include": "#numeric" },
            { "include": "#string" },
            { "include": "#operators" },
            { "include": "#punctuation" },
            { "include": "#block" }
          ]
        }
      ]
    }
  }
}
